<h2>Species Name: <%= @pokemon_specy.name %></h2>
<h2>Introduced in Generation: <%= link_to @pokemon_specy.generation_id, generation_path(@pokemon_specy.generation_id) %></h2>
<h2>
  Found in these Pokedexes:
  <% @pokemon_specy.pokedexes.each do |pokedex| %>
    <%= link_to pokedex.name, pokedex_path(pokedex.id) %>,
  <% end %>
</h2>
<h2>Variations:</h2>
<div class="row">
  <% @pokemon_specy.pokemons.each do |pokemon_variety| %>
    <div class="col">
      <div class="card" style="width: 15rem;">
        <!--<img src="..." class="card-img-top" alt="...">-->
        <div class="card-body">
          <h5 class="card-title"><%= pokemon_variety.name %></h5>
          <%= link_to "Show More", pokemon_path(pokemon_variety.id), {:class=>"btn btn-primary"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>