<div class="jumbotron">
  <h1 class="display-4">All Pokemon</h1>
  <p class="lead">This page will display all Pokemon in the PokeApi</p>
  <%= search_form_for @search do |f| %>
    <div class="field">
      <%= f.label :name_cont, "Name contains" %>
      <%= f.text_field :name_cont %>
    </div>
    <div class="actions"><%= f.submit "Search" %></div>
  <% end %>
</div>
<%= paginate @pokemons %>
<div class="row">
  <% @pokemons.each do |pokemon| %>
    <div class="col">
      <div class="card" style="width: 15rem;">
        <!--<img src="..." class="card-img-top" alt="...">-->
        <div class="card-body">
          <h5 class="card-title"><%= pokemon.name %></h5>
          <%= link_to "Show More", pokemon_path(pokemon.id), {:class=>"btn btn-primary"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>